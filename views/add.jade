extends template

block content
        h1 Add New Jade Rooms:
        form(method="post")
          fieldset.form-group
            label(for="name") Name:
            input.form-control(name='name',type='text',placeholder='Enter a Meaningful Name')
            small.text-muted Give a Meaningful name for people to find and understand you
          button.btn.btn-primary(type='submit') Create New
          a.btn.btn-default(href='/admin/rooms') Cancel